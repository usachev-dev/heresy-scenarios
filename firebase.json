{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "index.html"
      },
      {
        "source": "/read",
        "destination": "/read.html"
      },
      {
        "source": "/en/",
        "destination": "/en/.html"
      },
      {
        "source": "/en/read",
        "destination": "/en/read.html"
      },
      {
        "source": "/ru/",
        "destination": "/ru/.html"
      },
      {
        "source": "/ru/read",
        "destination": "/ru/read.html"
      },
      {
        "source": "/logo.png",
        "destination": "/public/logo.png"
      },
      {
        "source": "/robots.txt",
        "destination": "/public/robots.txt"
      },
      {
        "source": "**",
        "destination": "/client/index.html"
      }
    ]
  }
}