{
  "name": "heresy-scenarios",
  "version": "1.0",
  "description": "Scenarios for Horus Heresy v3",
  "engines": {
    "node": "24.10.0"
  },
  "scripts": {
    "start": "npm run images && vite",
    "dev": "npm run images && vite",
    "build": "rm -rf ./dist && npm run images && npm run build:client && npm run build:server && npm run generate",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
    "generate": "node ./prerender.mjs",
    "serve": "vite preview",
    "images": "node ./img-script.mjs"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node-localstorage": "1.3.0",
    "rollup-plugin-analyzer": "4.0.0",
    "typescript": "4.7.4",
    "vite-imagetools": "4.0.18",
    "vite-plugin-toml": "0.5.0",
    "vite-svg-loader": "4.0.0"
  },
  "dependencies": {
    "@babel/preset-react": "7.27.1",
    "@types/lodash-es": "4.17.6",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/react-helmet": "6.1.6",
    "@types/react-router": "5.1.20",
    "@vitejs/plugin-react": "5.1.4",
    "antd": "^6.3.1",
    "i18nano": "4.0.1",
    "lodash-es": "4.17.21",
    "mobx": "6.9.0",
    "mobx-react-lite": "3.4.3",
    "node-localstorage": "2.2.1",
    "qs": "^6.15.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet": "6.1.0",
    "react-icons": "4.8.0",
    "react-router": "6.9.0",
    "react-router-dom": "6.9.0",
    "sass": "1.97.3",
    "style.css": "1.0.3",
    "vite": "7.3.1",
    "vite-plugin-markdown": "2.2.0"
  }
}
